---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articles', ({ data }) => !data.draft);

// Count articles per category
const categoryCount = {};
allArticles.forEach(article => {
  article.data.category.forEach(cat => {
    categoryCount[cat] = (categoryCount[cat] || 0) + 1;
  });
});

// Sort by count
const sortedCategories = Object.entries(categoryCount)
  .sort((a, b) => b[1] - a[1]);
---

<BaseLayout title="Categories">
  <section class="articles-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Categories</h2>
        <span style="color: var(--color-text-muted);">{sortedCategories.length} categories</span>
      </div>

      <div class="categories-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 1rem;">
        {sortedCategories.map(([category, count]) => {
          const slug = category.toLowerCase().replace(/[^a-z0-9]+/g, '-');
          return (
            <a href={`/category/${slug}`} class="category-card" style="display: block; padding: 1.5rem; background: var(--color-bg-secondary); border: 1px solid var(--color-border); transition: border-color 0.2s;">
              <h3 style="font-family: var(--font-serif); font-size: 1.1rem; margin-bottom: 0.5rem; color: var(--color-text);">{category}</h3>
              <span style="font-size: 0.875rem; color: var(--color-text-muted);">{count} articles</span>
            </a>
          );
        })}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .category-card:hover {
    border-color: var(--color-accent) !important;
  }
</style>
